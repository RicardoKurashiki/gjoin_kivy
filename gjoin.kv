<LoginPage>:
    Widget:
        canvas:
            Color:
                rgba: [0.25, 0.2, 1, 1]
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        Widget:
            canvas:
                Color:
                    rgba: [1,1,1,0.9]
                Rectangle:
                    pos: (100, 375)
                    size: (200, 200)
                    source: root.imagem_app
        GridLayout:
            rows: 2
            cols: 2
            padding: 10
            spacing: 10
            pos_hint: {'x': 0, 'y': 0.75}
            size_hint: (1, 0.75)

            Label:
                text: '[b]E-mail[/b]'
                font_size: 24
                markup: True
                size: 75, 50
                size_hint: 0.5, None
            TextInput:
                id: log_email
                padding: [10, 0.5*(self.height - self.line_height)]
                font_size: 16
                multiline: False
                size: 75, 50
                size_hint: 0.5, None

            Label:
                text: '[b]Senha[/b]'
                font_size: 24
                markup: True
                size: 75, 50
                size_hint: 0.5, None
            TextInput:
                id: log_pass
                password: True
                padding: [10, 0.5*(self.height - self.line_height)]
                font_size: 16
                multiline: False
                size: 75, 50
                size_hint: 0.5, None
    
        GridLayout:
            rows: 1
            cols: 2
            padding: 10
            spacing: 10
            pos_hint: {'y': 0}
            size_hint: (None, None)
            
            Button:
                id: login
                text: 'LOGIN'
                size_hint: (None, None)
                height: 40
                width: 185
                on_release: root.login()

            Button:
                text: 'REGISTRAR'
                size_hint: (None, None)
                height: 40
                width: 185
                on_release: root.go_register()

