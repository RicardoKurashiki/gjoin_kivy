<ChatPage>:
    orientation: 'vertical'

    Widget:
        canvas:
            Color:
                rgba: [0.25, 0.2, 1, 1]
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout:
        orientation: 'vertical'
        spacing: 5
