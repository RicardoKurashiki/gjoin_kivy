                text: '[b]Sala de bate-papo[/b]'
                markup: True
                font_size: 24
        BoxLayout:
            orientation: 'vertical'
            Widget:
                canvas:
                    Color:
                        rgba: [0,0,0,0.8]
                    Rectangle:
                        size: (377, 455)
                        pos: 10, 60
            BoxLayout:
                size_hint_x:None
                size_hint_y:None
                height: 425
                width: 377
                ScrollView:
                    BoxLayout:
                        orientation: 'vertical'
                        id: chat_de_texto
                        size_hint_y: None
